-- Initial Lambency.cabal generated by cabal init.  For further documentation,
--  see http://haskell.org/cabal/users-guide/

name:                lambency
version:             0.1.0.0
synopsis:            A Real-Time Rendering Framework written in Haskell
-- description:      
homepage:            none
license:             MIT
license-file:        LICENSE
author:              Pavel Krajcevski
maintainer:          krajcevski@gmail.com
-- copyright:           
category:            Graphics
build-type:          Simple
cabal-version:       >=1.8
data-files:          simple.vert
                     simple.frag
                     simple-trans.frag
                     standard.vert
                     spotlight.frag
                     minimal.vert
                     minimal.frag
data-dir:            lib/Lambency/Shaders

library
  hs-source-dirs:      lib
  exposed-modules:     Lambency
                       Lambency.Types
  other-modules:       Lambency.Bounds
                       Lambency.Camera
                       Lambency.Light
                       Lambency.Loaders
                       Lambency.Loaders.OBJLoader
                       Lambency.Material
                       Lambency.Mesh
                       Lambency.GameObject
                       Lambency.Render
                       Lambency.Shader
                       Lambency.Texture
                       Lambency.Transform
                       Lambency.Vertex
                       Lambency.Utils
                       Lambency.Input
                       Lambency.Sound
                       Paths_lambency
  ghc-options:         -Wall -O3
  build-depends:       base > 4.5,
                       GLFW-b,
                       OpenGL >=2.9.2.0,
                       OpenGLRaw,
                       JuicyPixels,
                       linear,
                       parsec, text,
                       stm >= 2.4,
                       mtl >= 2.1.2,
                       netwire >= 5.0.0,
                       OpenAL, HCodecs,
                       time,
                       containers,
                       bytestring,
                       array, vector,
                       filepath,
                       -- Eventually replace these...
                       directory

executable lobjview
  main-is:        OBJViewer.hs
  hs-source-dirs: tools
  ghc-options:    -Wall -rtsopts -O3
  build-depends:  base > 4.5,
                  GLFW-b,
                  lambency,
                  linear,
                  netwire >= 5.0.0,
                  mtl >= 2.1.2,
                  directory
